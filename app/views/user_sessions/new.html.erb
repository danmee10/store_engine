<h1>Login</h1>

<%= form_tag user_sessions_path, method: :post do %>
  <div class="field">
      <%= label_tag "username/email" %>
      <%= text_field_tag :login_id %>
    <br/>
  </div>
  <div class="field">
    <%= label_tag :password %>
    <%= password_field_tag :password %>
    <br/>
  </div>
  <div class="actions">
    <%= submit_tag "Login" %>
  </div>
<% end %>

<%= link_to 'New User?', new_user_path %><br/>
<%= link_to 'Back', products_path %>
